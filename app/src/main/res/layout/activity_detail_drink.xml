<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/secbg"
    tools:context=".DetailDrinkActivity">

    <ImageView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:src="@drawable/forthbg" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="90dp"
        android:src="@drawable/rectangletitle" />

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/kadwabold"
        android:text="Avocado Greenty"
        android:textColor="@color/younggreen"
        android:textSize="25sp" />

    <ImageView
        android:id="@+id/img_drink"
        android:layout_width="200dp"
        android:layout_height="135dp"
        android:layout_below="@id/txtTitle"
        android:layout_marginStart="100dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/avocado" />

    <TextView
        android:id="@+id/txt_title_ingredients"
        android:layout_width="wrap_content"
        android:layout_height="27dp"
        android:layout_below="@id/img_drink"
        android:layout_marginStart="75dp"
        android:layout_marginTop="39dp"
        android:fontFamily="@font/atomicagereg"
        android:text="Ingredients :"
        android:textColor="@color/oldggreen"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/txt_ingredients"
        android:layout_width="230dp"
        android:layout_height="83dp"
        android:layout_below="@id/txt_title_ingredients"
        android:layout_marginStart="70dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/khmer"
        android:text="@string/ingredient"
        android:textColor="@color/oldggreen"
        android:textSize="9sp" />

    <TextView
        android:id="@+id/txt_title_step"
        android:layout_width="wrap_content"
        android:layout_height="27dp"
        android:layout_below="@id/txt_ingredients"
        android:layout_marginStart="75dp"
        android:layout_marginTop="39dp"
        android:fontFamily="@font/atomicagereg"
        android:text="How to make  :"
        android:textColor="@color/oldggreen"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/txt_step"
        android:layout_width="230dp"
        android:layout_height="83dp"
        android:layout_below="@id/txt_title_step"
        android:layout_marginStart="70dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/khmer"
        android:text="@string/ingredient"
        android:textColor="@color/oldggreen"
        android:textSize="9sp" />


</RelativeLayout>